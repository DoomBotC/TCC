<Window x:Class="TCC.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" ResizeMode="CanResize" Title="TCC" Height="500" Width="600
        ">
    <Grid>
        <TextBlock Text="Bem-Vindo ao Sistema TCC" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,13,0,0" />
        <!-- Botão para Criar Tabela -->
        <Button Content="Criar Tabela" Height="30" Margin="300,220,64,0" VerticalAlignment="Top" Click="CriarTabelaButton_Click" />
        <!-- Botões Adicionais -->
        <Button Content="Ler Dados" Height="30" Margin="300,255,64,0" VerticalAlignment="Top" Click="LerDadosButton_Click" />
        <Button Content="Alterar Tabela" Height="30" Margin="300,290,64,0" VerticalAlignment="Top" Click="AlterarTabelaButton_Click" />
        <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="34,82,0,0" ><Run Language="pt-br" Text="Tabelas Existentes"/><LineBreak/><Run Language="pt-br"/></TextBlock>

        <ListBox x:Name="TabelasListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="300" Margin="34,140,0,0" SelectionChanged="TabelasListBox_SelectionChanged"/>
    </Grid>
</Window>